{
  "extends": "./tsconfig.common.json",
  "include" : ["src", ".eslintrc.js"],
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "skipLibCheck": true 
  }
}
